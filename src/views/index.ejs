<!DOCTYPE html>
<html>

<head>
  <title>Pimienta & sal</title>
  <link rel="stylesheet" href="/css/style.css" />
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>

<body>

  <%- include('./partials/nav.ejs') %>

    <!-- Header -->
    <header class="ps-display-container ps-content ps-wide" id="home">
      <img class="ps-image" src="img/header.jpg" alt="Pimienta & Sal" width="1600" height="800" />
      <div class="ps-display-bottomleft ps-padding-large ps-opacity">
        <h1 class="ps-xxlarge">Sabores que enamoran</h1>
      </div>
    </header>

    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->
      <div class="ps-row ps-padding-64" id="about">
        <div class="ps-col m6 ps-padding-large ps-hide-small">
          <img src="img/principal.jpg" class="ps-round ps-image ps-opacity-min" alt="SAbores que enamoran" width="600"
            height="750" />
        </div>

        <div class="ps-col m6 ps-padding-large">
          <h1 class="ps-center"><%= about.titulo %></h1>
          <br />
          <p class="ps-large">
            <%= about.lorem %>
          </p>
          <p class="ps-large ps-text-grey ps-hide-medium">
            <%= about.exceptur %>
          </p>
        </div>
      </div>

      <hr />
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuentro Menu</h1>
          <br />
          <% for (let i=0; i < platos.length; i++) { %>
            <h4> <%= platos[i].nombrePlato %> </h4>
            <p class="ps-text-grey">
              <%= platos[i].descripcion + ' ' + platos[i].precio %>
            </p>
            <br />
          <% } %>

        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img src="img/menu.jpg" class="ps-round ps-image ps-opacity-min" alt="Menu" />
        </div>
      </div>

      <!-- Footer -->
      <%- include('./partials/footer.ejs') %>
    </div>
</body>

</html>